<% @order.line_items.each do |item| %>

<tr>
  <td>
    <%= image_tag(item.product.image.tiny, :alt => "product image") %>
  </td>
  <td>
    <h4><%= item.product.name %></h4>
    <br>
    <p><%= item.product.description %></p>
  </td>
  <td>
    <%= item.quantity %>
  </td>
  <td>
    <%= humanized_money_with_symbol item.total_price_cents %>
  </td>
</tr>

<% end %>

<tfoot>
  <tr>
    <th colspan="3">
      TOTAL:
    </th>
    <th>
      <%= humanized_money_with_symbol @order.total_cents %>
    </th>
  </tr>
</tfoot>